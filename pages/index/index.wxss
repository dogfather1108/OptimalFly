/**index.wxss**/
page{
  height: 100%;
}
.container{
  height: 100%;
  display: flex;
  flex-direction: column;
}
.container>.tips{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 70rpx;
  box-shadow: 1rpx 6rpx 9rpx rgba(0,0,0,0.1);
}
.container>.tips>image{
  margin-left: 29rpx;
}
.container>.tips{
  width: 100%;
  color:rgba(43,209,255,1);
  font-size:28rpx;
}
.container>.tips>text{
  margin-left: 34rpx;
}
/* .tips swiper{
  margin-left: 5rpx;
} */
.tips swiper-item{
  line-height: 72rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.section-scroll{
  flex: 1;
  background: rgba(17,199,255,.07);
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}
.section-scroll .title{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 51rpx;
  justify-content: center;
}
.section-scroll .title label{
  width:15rpx;
  height:15rpx;
}
.section-scroll .title text{
  font-weight:bold;
  color:rgba(51,51,51,1);
  font-size: 28rpx;
  margin-right: 17rpx;
}
.item:nth-of-type(1){
  margin-top: 39rpx;
}
.item:nth-of-type(2) .btn{
  color:rgba(21,200,255,1);
  border:1rpx solid rgba(21,200,255,1);
}
.item:nth-of-type(3) .btn{
  color:rgba(227,85,82,1);
  border:1rpx solid rgba(227,85,82,1);
}
.item:nth-of-type(4) .btn{
  color:rgba(111,137,237,1);
  border:1rpx solid rgba(111,137,237,1);
}
.item:nth-of-type(5) .btn{
  color:rgba(82,202,196,1);
  border:1rpx solid rgba(82,202,196,1);
}
.item:nth-of-type(n+2){
  margin-top: 32rpx;
}
.item:nth-last-of-type(1){
  margin-bottom: 20rpx;
}
.item{
  width: 700rpx;
  height: 199rpx;
  background-size: cover;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-weight:400;
  color:rgba(51,51,51,1);
  font-size:32rpx;
  justify-content: center;
  margin: auto;
}
.item .btn{
  background: white;
  width:166rpx;
  height:39rpx;
  
  border-radius:20rpx;
  line-height: 37rpx;
  font-size:26rpx;
  
  text-align: center;
}
.item .tips{
  margin: 21rpx 0;
  font-weight:bold;
  font-size:32rpx;
  margin-left: 200rpx;
}
.item .til{
  margin-left: -20rpx;
}
